@model NaveedElectronicWeb.NEModel.Category


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Category</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control", placeholder = "Category name" } })
                @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-info" />
            </div>
        </div>
    </div>
}

<br />
<div>
  <ol class="breadcrumb">
      <li class="active">
          <strong>
              @Html.ActionLink("Back to List", "Index")
          </strong>
      </li>
      <li class="active">

          @Html.ActionLink("View Products", "Index", "Product", new { page = 1, categoryid = Model.Id }, null)
      </li>
      <li class="active">

          @Html.ActionLink("Details", "Details", new { id = Model.Id })

      </li>
      
      <li class="active">

          @Html.ActionLink("Delete", "Delete", new { id = Model.Id })

      </li>
  </ol>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
