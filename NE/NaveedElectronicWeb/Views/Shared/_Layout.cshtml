<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Naveed Electronics</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr") 
</head>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                
                <a href="@Url.Action("Index", "Home")"  class="navbar-brand"><span class="glyphicon glyphicon-leaf"></span> Naveed Electronics</a>
               
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Action("Index", "Home")"><span class="glyphicon glyphicon-dashboard"></span> Dashboard</a></li>
                    <li role="presentation" class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-th"></span>
                            Product <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("Index", "Category")"><span class="glyphicon glyphicon-th-large"></span> Categories</a></li>
                            <li><a href="@Url.Action("Index", "Product")"><span class="glyphicon glyphicon-th"></span> Products</a></li>
                            
                        </ul>
                    </li>
                    <li role="presentation" class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"> <span class="glyphicon glyphicon-user"></span>
                            Supplier <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action( "Create", "Supplier")"><span class="glyphicon glyphicon-plus"></span> Add New</a></li> 
                            <li><a href="@Url.Action("Index", "Supplier")"><span class="glyphicon glyphicon-user"></span> Suppliers</a></li> 
                             

                        </ul>
                    </li>
                    <li role="presentation" class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-user"></span>
                            Customer <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action( "Create", "Customer")"><span class="glyphicon glyphicon-plus"></span> Add New</a></li>
                            <li><a href="@Url.Action("Index", "Customer")"><span class="glyphicon glyphicon-user"></span> Customers</a></li>
                            <li><a href="@Url.Action( "Index", "Guarantor")"><span class="glyphicon glyphicon-user"></span> Guarantors</a></li>

                         

                        </ul>
                    </li> 
                    <li><a href="@Url.Action("Index", "City")"><span class="glyphicon glyphicon-map-marker"></span> Cities</a></li>
                    <li><a href="@Url.Action("About", "Home")"><span class="glyphicon glyphicon-star"></span> About</a></li>

                    
                     
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr class="hidden-print" />
       
        <footer class="hidden-print">
           
           &copy; @DateTime.Now.Year Naveed Electronics
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap") 
    @RenderSection("scripts", required: false)
</body>
</html>

